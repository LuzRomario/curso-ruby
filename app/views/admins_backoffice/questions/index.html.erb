  <div class="col-lg-12">
  <h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h1>
  </div>

<div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length">
<label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
<option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label>
</div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter">
<label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label>
</div></div></div>

<div class="row"><div class="col-sm-8">
<table id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%;" class="table table-bordered dataTable table-hover" width="100%" cellspacing="0">
    <thead>
        <tr role="row">
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :id) %></th>
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :description) %></th>
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :subject) %></th>
        <th rowspan="1" colspan="1">
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %> 
          <i class="fa fa-plus"></i>
          <% end %>Cadastrar  
        </th>
    </thead>
    <tfoot>
        <tr>
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :id) %></th>
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :description) %></th>
        <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :subject) %></th>
        <th rowspan="1" colspan="1">Editar/Apagar</th>
        </tr>
    </tfoot>
    <tbody>
    <% @questions.each do |question| %>
    <tr class="odd">
    <td class="sorting_1"> <%= question.id %> </td>
    <td> <%= question.description.truncate(50) %> </td>
    <td> <%= question.subject.description.truncate(30) %> </td>
    <td style="width: 170px"> 
    
    <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %> 
      <i class="fa fa-edit"></i>
    <% end %>

    <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle" do %> 
      <i class="fa fa-minus"></i>
    <% end %>
  </td>
    </tr>
    <% end %>
    </tbody>
</table>

<%= paginate @questions  %>



