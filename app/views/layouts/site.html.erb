<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'site' %>

  </head>

  <body>

 <div class="container-lg">
  
       
      <!-- Static navbar -->
      <div class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <%= link_to "Time to Answer", root_path, class:"navbar-brand" %>
       <ul class="nav navbar-nav"></ul>
        <%= form_with(url: site_search_path, local: true, method: :get, class:"form-inline my-2 my-lg-0") do |form| %>
          <%= form.text_field :term, class:"form-control mr-sm-2",placeholder:"Digite sua pesquisa..."  %>
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
        <% end %>
       </ul>
       
       <% unless user_signed_in? %>
            <li><%= link_to 'Entrar', new_user_session_path %></li>
            <li><%= link_to 'Cadastrar-se', new_user_registration_path %></li>
              <% else %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span>
                  <i class="fa fa-user-circle"></i></a>
                  <ul class="dropdown-menu">
                  <li>
                      <%= link_to users_backoffice_welcome_index_path do %>
                          <i class="fa fa-user fa-fw"></i> Perfil
                      <% end %>
                  </li>
                  <hr>
                  <li>
                      <%= link_to destroy_user_session_path, method: :delete do %>
                          <i class="fa fa-sign-out fa-fw"></i> Sair
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
        </nav>
      <!-- Main component for a primary marketing message or call to action -->
     
        <%= yield %>
    </div> <!-- /container -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>

    <% if notice %>
        <script>            
            $.bootstrapGrowl("<%= notice %>", {
                type: 'info', // (null, 'info', 'danger', 'success')
                align: 'right', // ('left', 'right', or 'center')
                allow_dismiss: true, // If true then will display a cross to close the popup.
                stackup_spacing: 10 // spacing between consecutively stacked growls.
            });
        </script>
        <% end %>
  </body>
</html>   