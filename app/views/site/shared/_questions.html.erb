 <div class="jumbotron">
<h3> <%= msg_jumbotron %> </h3>
      </div>

<% @questions.each do |question| %>
<%= form_with url: site_answer_path do |form| %>
<div class="card">
  <div class="card-header">
    <h3 class="card-title"> 
    <span class="badge badge-light">
    <%= link_to "#{question.subject.description} (#{question.subject.questions_count}) ", site_search_subject_path(question.subject_id, question.subject.description) %>
    </span>
    <%=question.description%> </h3>
  </div>
  <div class="card-body">
    <ul>
      <% question.answers.each do |answer| %>
      <li style="list-style:none;">
        <div class="radio">
        <label>
        <%= radio_button_tag 'answer_id', answer.id %>
        <%= answer.description %>
        </label>
      </li>
      <% end %>
      <li style="list-style:none;">
      <%= form.submit "Responder", class:"btn btn-primary", id:"submit_#{question.id}"%>
      </li>
    </ul>
  </div>
</div>
<% end %>
  <% end %> 
<hr>
  <%= paginate @questions  %>