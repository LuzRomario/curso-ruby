
<div>    
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
              <h1>Cadastro de Usu√°rio</h1>
              <div>
                 <%= f.email_field :email, autofocus: false, placeholder: "Insira seu email", class: "form-control" %>
               </div>
              <div>
                <%= f.password_field :password, placeholder: "Insira sua senha", class: "form-control"%>
                </div>
                <div>
                <%= f.password_field :password_confirmation, placeholder: "Confirme sua senha", class: "form-control"%>
                </div>
              <div>
               <%= f.submit "Cadastrar-se", class: "btn btn-outline-secondary submit", style:"float: none; margin-left: 0px; width: 50%;" %>
              </div>

                <br />
                 <% end %>
                 <%= render "users/shared/links" %>
            </section>
          </div>
        </div>
        
</div>


